<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipCalculatorActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/checkAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Check Amount:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/checkAmountValue"
                android:layout_width="233dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/partyAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Party Size:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/partySizeValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:padding="10dp">

            <Button
                android:id="@+id/buttonCompute"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="buttonCompute"
                android:text="Compute Tip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="74dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="74dp"
                android:layout_marginBottom="16dp"
                android:text="Tips and Totals (per person)"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonCompute" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Tip"
                android:layout_width="107dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Tip:"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <LinearLayout
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/fifteenPercentTip"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15%"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/fifteenPercentTipValue"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/twentyPercentTip"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20%"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/twentyPercentTipValue"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/twentyfivePercentTip"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="25%"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/twentyfivePercentTipValue"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Total"
                android:layout_width="107dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Total:"
                android:textSize="24sp"
                android:textStyle="bold" />

        </TableRow>

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/fifteenPercentTotal"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15%"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/fifteenPercentTotalValue"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/twentyPercentTotal"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20%"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/twentyPercentTotalValue"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/twentyfivePercentTotal"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="25%"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/twentyfivePercentTotalValue"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
